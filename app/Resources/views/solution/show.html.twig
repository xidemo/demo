{% extends ':common:layout.html.twig' %}

{% block page_title %}
    <h1>{{ solution.name }}</h1>
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-md-12">
            <img src="{{ asset('uploads/default/default_product_'~random(15)~'.jpg') }}"
                 alt="{{ solution.name }}"
                 class="img-responsive img-thumbnail"
            >
        </div>
    </div>
    <table class="table table-responsive">
        <tbody>
        <tr>
            <th>Name</th>
            <td>{{ solution.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ solution.description }}</td>
        </tr>
        </tbody>
    </table>
    <div class="panel panel-default">
        <div class="panel-heading">Related Products</div>
        <ul class="list-group">
            {% for product in solution.products %}
                <div class="list-group-item">
                    <a href="{{ path('product_show', {'slug': product.slug}) }}">
                        {{ product.name }}
                    </a>
                </div>
            {% endfor %}
        </ul>
    </div>

    <ul>
        <li>
            <a href="{{ path('solution_show', {'slug': solution.slug}) }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
