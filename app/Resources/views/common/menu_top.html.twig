<nav class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
            {#collapsebtn#}
            <button type="button" class="navbar-toggle collapsed"
                    data-toggle="collapse" data-target="#collapsemenu"
                    aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            {#logo#}
            <a href="{{ path('homepage') }}" class="pull-left">
                <img class="logo" src="{{ asset('images/logo.png') }}" alt="ACME"/>
            </a>
        </div>
        {#menu#}
        <div class="collapse navbar-collapse" id="collapsemenu">
            {{ knp_menu_render('main_menu', { 'currentClass' : 'active'} ) }}
            {#search#}
            <form class="navbar-form navbar-left" role="search" action="{{ path('product_search') }}" method="get">
                <div class="form-group form-group-sm">
                    <div class="input-group">
                        <input type="text" name="keyword" class="form-control" placeholder="Search Products" required="required">
                        <span class="input-group-btn"><button type="submit" class="btn btn-sm btn-default">Go
                                </button></span>
                    </div>
                </div>
            </form>
            {#right control#}
            <span class="navbar-text navbar-right">
                    <a href="#" title="Help Center" class="fa fa-question-circle fa-fw"></a>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                        <a href="{{ path('fos_user_security_logout') }}">
                            <span class="fa fa-sign-out"></span>
                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                        </a>
                    {% else %}
                        <span class="fa fa-sign-in"></span>
                        <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                    {% endif %}
            </span>
        </div>
    </div>
</nav>